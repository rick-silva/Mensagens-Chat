generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id      String    @id
  title   String
  Message Message[]
}

model Message {
  id         String    @id
  title      String    @unique
  content    String
  categoryId String?
  Category   Category? @relation(fields: [categoryId], references: [id])
}
